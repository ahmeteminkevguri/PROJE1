<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chocolate"
    tools:context=".HastaKayit">


    <EditText
        android:id="@+id/edittextHastakullaniciadi"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/account"
        android:ems="10"
        android:hint="AD-SOYAD"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="366dp" />

    <EditText
        android:id="@+id/edittextHastaSifre"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextHastakullaniciadi"
        android:layout_marginTop="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableLeft="@drawable/lock"
        android:background="@drawable/edittextarkaplan"
        android:ems="10"
        android:hint="ŞİFRE"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="366dp" />

    <EditText
        android:id="@+id/edittextHastaTelNo"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextHastaSifre"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint="TELEFON NUMARASI"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="366dp" />

    <EditText
        android:id="@+id/edittextHastaYas"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextHastaTelNo"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/age"
        android:ems="10"
        android:hint="YAŞINIZ"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="366dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/logo"/>

    <Button
        android:id="@+id/btnKaydethasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextHastaYas"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/black"
        android:text="KAYDET" />
</RelativeLayout>
